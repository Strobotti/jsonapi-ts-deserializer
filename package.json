{
  "name": "jsonapi-ts-deserializer",
  "version": "1.0.0",
  "description": "JSON:API deserializer in Typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Strobotti/jsonapi-ts-deserializer.git"
  },
  "keywords": ["jsonapi", "typescript", "deserializer", "JSON:API"],
  "author": "Juha Jantunen <juha@strobotti.com> (https://www.strobotti.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Strobotti/jsonapi-ts-deserializer/issues"
  },
  "homepage": "https://github.com/Strobotti/jsonapi-ts-deserializer#readme",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.6",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.2"
  }
}
